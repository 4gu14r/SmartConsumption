<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/container_components</item>
    </style>
    
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Disabled">
        <item name="android:background">@drawable/desabilitado</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>


    <style name="relatorio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/relatorio</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="relatorio_res">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/relatorio_res</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>